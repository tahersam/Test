pipeline{
    
    agent any

    options { skipDefaultCheckout(true) }

    stages{
        stage("Checkout"){
            steps{
               git url: "https://github.com/tahersam/Test/", branch: "master"
            }
        }
        stage("Build"){
            steps{
			if (isUnix()) {
                        sh "mvn -DskipTest clean package"
            } else {
                        bat "mvn -DskipTest clean package"
            }
            }
        }
        stage("Test"){
		
            steps{
			if (isUnix()) {
                        sh "mvn test"
            } else {
                        bat "mvn test"
            }
            }
        }
    }
}
